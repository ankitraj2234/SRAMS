# SRAMS PostgreSQL Environment Configuration
# Copy this to backend/.env and customize

# ============================================
# PostgreSQL Connection (Zero Trust)
# ============================================
DB_TYPE=postgres

# PostgreSQL Server
DB_HOST=localhost
DB_PORT=5432
DB_NAME=srams

# Application Role (used by Go backend - RLS protected)
# NEVER use srams_admin in production application code
DB_USER=srams_app
DB_PASSWORD=srams_app_2026

# SSL Mode: disable, require, verify-ca, verify-full
# Use 'require' minimum in production
DB_SSLMODE=prefer

# Connection Pool Settings
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# ============================================
# Admin Role (for migrations ONLY)
# ============================================
DB_ADMIN_USER=srams_admin
DB_ADMIN_PASSWORD=srams_admin_2026

# ============================================
# Application Settings
# ============================================
JWT_SECRET=your-256-bit-secure-secret-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=168h

# Storage paths
DOCUMENTS_PATH=./data/documents
LOGO_PATH=./data/logo

# Server
SERVER_PORT=8080
SERVER_HOST=localhost

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Docker Compose Override (for dev)
# ============================================
# When using docker-compose.yml:
# DB_HOST=postgres (service name)
# DB_PORT=5432
